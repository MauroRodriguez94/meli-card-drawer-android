<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/thumb"
        android:gravity="center"
        android:top="4dp"
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp">
        <shape android:shape="rectangle">
            <size
                android:width="65.44dp"
                android:height="28.6dp" />

            <corners android:radius="60dp" />
        </shape>
    </item>

    <item
        android:gravity="center"
        android:top="4dp"
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp">

        <shape android:shape="rectangle">

            <size
                android:width="61.6dp"
                android:height="25dp"/>

            <corners android:radius="60dp" />

            <gradient
                android:startColor="#21000000"
                android:endColor="#ffffffff"
                android:angle="270"/>
        </shape>
    </item>

</layer-list>